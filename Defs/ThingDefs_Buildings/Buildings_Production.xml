<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BuildingBase">
    <defName>CAT_ThinkingSpot</defName>
    <label>research spot</label>
    <description>A place where new ideas are created. It might not be the very sophisticated, but even the most glorious civilizations had humble beginnings.</description>
    <thingClass>Building_ResearchBench</thingClass>
    <size>(1,1)</size>
    <graphicData>
      <texPath>Things/Building/Production/CAT_SmartRock</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(1,1)</drawSize>
    </graphicData>
    <altitudeLayer>FloorEmplacement</altitudeLayer>
    <statBases>
      <WorkToBuild>0</WorkToBuild>
      <ResearchSpeedFactor>0.35</ResearchSpeedFactor>
    </statBases>
    <scatterableOnMapGen>false</scatterableOnMapGen>
    <useHitPoints>false</useHitPoints>
    <designationCategory>Production</designationCategory>
    <passability>Standable</passability>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <surfaceType>Item</surfaceType>
    <building>
      <canPlaceOverImpassablePlant>false</canPlaceOverImpassablePlant>
    </building>
    <comps>
      <li>
        <compClass>CompReportWorkSpeed</compClass>
      </li>
    </comps>
    <placeWorkers>
      <li>PlaceWorker_ReportWorkSpeedPenalties</li>
    </placeWorkers>
  </ThingDef>

</Defs>
